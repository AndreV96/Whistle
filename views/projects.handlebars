<div class="row justify-content-md-end">
  <button type="button" class="btn btn-primary taskbuttons" data-bs-toggle='modal' data-bs-target='#taskBttn' style="width: 10rem;">Add Task</button>
</div>
    
<div class="row mb-4">
  <div class="col-sm-3">
          <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">{{title}}</h5>
            </div>
          </div>
          <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
              <p class="card-text">{{description}}</p>
            </div>
          </div>
          <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
              <p class="card-title">Project Tasks Status: {{tasks.length}} </p>
              {{!-- <p class="card-text">Future: {{task.state}}</p>
              <p class="card-text">In Progress: {{task.state}}</p>
              <p class="card-text">Done: {{task.state}}</p> --}}
            </div>
          </div>
          <div class="card text-center" style="width: 18rem;">
            <div class="card-body">
              <p class="card-title">Employees in this project:</p>
                {{#each project_member}}
                    <a class="card-text block">{{first_name}} {{last_name}} </a>
                {{/each}} 
    </div>
  </div>
</div>

<div class="col-sm-9">
    
{{#each tasks as |task| }}
      <div class="row">
        <div class="card projects">
          <div class="card-body">
            <div class="row ">
              <div class="col-10">
                <a href="/project/{{id}}">{{title}}</a>
                <a class="card-subtitle mb-2 text-muted">Due date: {{format_date due_date}}</a>
                <p class="card-text">{{description}}</p>
              </div>
              <div class="col-2">
                <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle='dropdown' aria-haspopup="true" aria-expanded="false" style="width: 10rem;">Status</button>
                <div class="dropdown">
                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" href="#">Future</a>
                    <a class="dropdown-item" href="#">In progress</a>
                    <a class="dropdown-item" href="#">Done</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
{{/each}}
    
</div>

<!-- New Task Modal -->

<div class="modal" id="taskBttn">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">New Task</h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <div class="modal-body">
        <div class="md-form mb-5">
          <i class="fas fa-user prefix grey-text"></i>
          <label data-error="wrong" data-success="right" for="title">Title</label>
          <input type="text" id="title" class="form-control validate">
        </div>

        <div class="md-form">
          <i class="fas fa-pencil prefix grey-text"></i>
          <label data-error="wrong" data-success="right" for="description">Description</label>
          <textarea type="text" id="description" class="md-textarea form-control" rows="4"></textarea>
        </div>

        <div class="md-form">
          <i class="fas fa-pencil prefix grey-text"></i>
          <label for="start">Due date:</label>
        <input type="date" id="dueDate" name="dueDate" value="2022-03-06"
       min="2022-03-01" max="2025-12-31">
        </div>

        {{!-- <div class="form-check">
          <p>Assign Employee</p>
          <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
           <!-- {{#each employee_id}} -->
          <label class="form-check-label" for="flexCheckDefault">{{this}}</label>
           <!-- {{#each}} -->
        </div> --}}

        <div class="modal-footer d-flex justify-content-center">
          <button class="btn btn-unique" id="addTask"><i class="fas fa-paper-plane-o ml-1">Add</i></button>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/project.js"></script>
